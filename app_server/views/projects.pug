extends layout
block stylesheets
  link(rel='stylesheet', href='/stylesheets/projects.css')
block scripts
  script(src='/javascripts/projects.js')

block content
  section
    h2 My Projects
    table
      tr
        th(width='160px') Game Name
        th Game Description
        th(width='100px') Game Leader
        th Group
        th Edit
        th Remove
      each project in projects
        tr
          td 
            a(href="/projects/"+project._id) #{project.title}
            br
          td= project.description
          td= project.leader
          td= project.members.length
          td
            form(action='/projects/' + project._id + '/edit')
              input(type='submit' value='Edit')
          td
            form(action='/projects/delete/' + project._id)
              input(type='submit' value='Delete')
    br
    form(action='/new_project')
      input(type='submit' value='Create New Project')
    br
