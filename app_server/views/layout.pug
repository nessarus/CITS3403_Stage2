doctype html
html
  head
    title= title
    meta(charset='utf-8')
    block stylesheets
    link(rel='stylesheet', href='/stylesheets/headernav.css')
    block scripts
      script(src='/javascripts/index.js')
  body
    header
        // Turns the logo into a link for the welcome page
        a(href='/')
          // I made this logo using GIMP
          img(src='/images/logo.PNG', alt='logo', style='margin: 0; height: 100px; float: left')
        br

        if (user)
          p Welcome #{user.username}
  nav
    // Nav links area.
    //login  and logout switch depending on whether logged in or not
    ///\ same with profile and register
    ul
      li
        a(href='/') Home      
      li
        a(href='/projects') My Projects
      li       
        a(href='/new_project') Create Projects 
      li
        a(href='/chat') Chat
      li
        a(href='/about') About
      li
        if (!user)
          a(href='/register') Register
        if(user)
          a(href='/profile') My Profile
      li 
        if (!user)
          a(href='/login') Login
        if (user)
          a(href="/logout") Logout  
  block content
  block foot
    footer
      br
      // time
      #dynamic_time
      br
      #last_date
      script.
        startTime()
        dateLastModified()
    

