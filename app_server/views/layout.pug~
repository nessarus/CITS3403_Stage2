doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      if (!user)
        a(href="/login") Login
      br
      a(href="/register") Register
        if (user)
          p You are currently logged in as #{user.username}
          a(href="/logout") Logout
    block content
